<?xml version="1.0" encoding="utf-8"?>
    <TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/tea_green"
        android:gravity="center"
        android:onClick="main_color"
    tools:context=".tictactoe">
        <LinearLayout android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="3"
            android:layout_marginBottom="30dp"
            android:orientation="horizontal"
            android:background="@color/browser_actions_bg_grey"
            >
            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/edmail"
                android:layout_weight="2"
                android:hint="enter Email"
                tools:ignore="HardcodedText"
                android:inputType="textWebEmailAddress"
                android:autofillHints="xyz@gmail.com" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Request"
                android:layout_weight="1"
                android:id="@+id/burequest"
                android:onClick="buRequest"
                tools:ignore="HardcodedText" />
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Accept"
                android:onClick="buAccept"
                android:layout_weight="1"
                android:id="@+id/buAccept"
                tools:ignore="HardcodedText" />
        </LinearLayout>

        <TableRow
            android:id="@+id/row1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="3dp"
            android:gravity="center"
            android:splitMotionEvents="?android:attr/windowSwipeToDismiss"
            tools:targetApi="kitkat_watch">

            <Button
                android:id="@+id/button3"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/height_button"
                android:layout_marginEnd="@dimen/small_margin"
                android:layout_marginRight="@dimen/small_margin"
                android:onClick="buclick"
                app:backgroundTint="@color/button_color" />

            <Button
                android:id="@+id/button2"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/height_button"
                android:layout_marginEnd="@dimen/small_margin"
                android:layout_marginRight="@dimen/small_margin"
                android:onClick="buclick"
                app:backgroundTint="@color/button_color" />

            <Button
                android:id="@+id/button"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/height_button"
                android:layout_marginEnd="@dimen/small_margin"
                android:layout_marginRight="@dimen/small_margin"
                android:onClick="buclick"
                app:backgroundTint="@color/button_color" />
        </TableRow>

        <TableRow
            android:id="@+id/row2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="3dp"
            android:gravity="center"
            android:splitMotionEvents="?android:attr/windowSwipeToDismiss"
            tools:ignore="NewApi">

            <Button
                android:id="@+id/button6"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/height_button"
                android:layout_marginEnd="@dimen/small_margin"
                android:layout_marginRight="@dimen/small_margin"
                android:onClick="buclick"
                app:backgroundTint="@color/button_color" />

            <Button
                android:id="@+id/button5"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/height_button"
                android:layout_marginEnd="@dimen/small_margin"
                android:layout_marginRight="@dimen/small_margin"
                android:onClick="buclick"
                app:backgroundTint="@color/button_color" />

            <Button
                android:id="@+id/button4"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/height_button"
                android:layout_marginEnd="@dimen/small_margin"
                android:layout_marginRight="@dimen/small_margin"
                android:onClick="buclick"
                app:backgroundTint="@color/button_color" />

        </TableRow>

        <TableRow
            android:id="@+id/row3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="3dp"
            android:gravity="center"
            android:splitMotionEvents="?android:attr/windowSwipeToDismiss"
            tools:ignore="NewApi">

            <Button
                android:id="@+id/button9"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/height_button"
                android:layout_marginEnd="@dimen/small_margin"
                android:layout_marginRight="@dimen/small_margin"
                android:onClick="buclick"
                app:backgroundTint="@color/button_color" />

            <Button
                android:id="@+id/button8"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/height_button"
                android:layout_marginEnd="@dimen/small_margin"
                android:layout_marginRight="@dimen/small_margin"
                android:onClick="buclick"
                app:backgroundTint="@color/button_color" />

            <Button
                android:id="@+id/button7"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/height_button"
                android:layout_marginEnd="@dimen/small_margin"
                android:layout_marginRight="@dimen/small_margin"
                android:onClick="buclick"
                app:backgroundTint="@color/button_color" />


        </TableRow>

        <LinearLayout
            android:layout_width="403dp"
            android:layout_height="190dp"
            android:layout_gravity="bottom|right"
            android:layout_marginStart="@dimen/small_margin"
            android:layout_marginLeft="@dimen/small_margin"
            android:layout_marginTop="@dimen/small_margin"
            android:layout_marginEnd="@dimen/small_margin"
            android:layout_marginRight="@dimen/small_margin"
            android:layout_marginBottom="@dimen/small_margin"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="50dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="100dp"
                    android:layout_height="50dp"
                    android:layout_marginEnd="@dimen/small_margin"
                    android:layout_marginRight="@dimen/small_margin"
                    android:background="@color/teal_700"
                    android:fadeScrollbars="false"
                    android:gravity="center"
                    android:hint="player1"
                    android:text="" />

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="100dp"
                    android:layout_height="50dp"
                    android:layout_marginStart="@dimen/small_margin"
                    android:layout_marginLeft="@dimen/small_margin"
                    android:background="@color/grey"
                    android:fadeScrollbars="false"
                    android:gravity="center"
                    android:hint="player2"
                    android:text="" />
            </LinearLayout>

            <Button
                android:id="@+id/button10"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="0.3"
                android:onClick="reset"
                android:shadowColor="@color/purple_200"
                android:text="RESET"
                tools:ignore="OnClick" />

        </LinearLayout>

    </TableLayout>
